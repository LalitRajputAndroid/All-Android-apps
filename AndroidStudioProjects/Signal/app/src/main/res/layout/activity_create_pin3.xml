<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="30dp"
    tools:context=".create_pinActivity3">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your PIN"
        android:textStyle="bold"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="40dp"
        android:textSize="32sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PINs keep information stored with singnal encrypted so only you can access it. Your profile , setting ,and, contantacts will restore when you reinstall. You won't need your PIN to open the app ."
        android:textSize="18sp"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textinputpin_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:backgroundTint="#0DF3EEEE"
            android:layout_marginBottom="18dp"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN must be at least 4 digits"
        android:textSize="18sp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/continue_btn"
        android:layout_marginTop="200dp"
        android:hint="Next"
        android:id="@+id/pincreate_nextbtn"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        />
</LinearLayout>